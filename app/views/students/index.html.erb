<h1>Listing Student</h1>
<%= link_to 'New student', new_students_path %>
<table>
  <tr>
    <th>first name</th>
    <th>last name</th>
    <th colspan="3"></th>
  </tr>
 
  <% @students.each do |student| %>
    <tr>
      <td><%= student.first_name %></td>
      <td><%= student.last_name %></td>
      <td><%= link_to 'Show', {:action => 'show', :id => student.id}, :method => :get %></td>
      <td><%= link_to 'Edit', {:action => 'edit', :id => student.id}, :method => :get %></td>
      <td><%= link_to 'Destroy', {:action => 'destroy', :id => student.id}, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<!-- data: { confirm: 'Are you sure?' } -->