<h1>Listing Student</h1>
<%= link_to 'New student', new_students_path %>
<table>
  <tr>
    <th>first name</th>
    <th>last name</th>
    <th colspan="3"></th>
  </tr>
 
  <% @students.each do |student| %>
    <tr>
      <td><%= student.first_name %></td>
      <td><%= student.last_name %></td>
      <td><%= link_to 'Show', students_path(student) %></td>
      <td><%= link_to 'Edit', edit_students_path(student) %></td>
      <td><%= link_to 'Destroy', students_path(student),
              method: :destroy,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>